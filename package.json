{
  "name": "@zcorky/movable",
  "version": "0.0.4",
  "description": "Enable the element movable anywhere.",
  "main": "lib/index.js",
  "jsnext:main": "lib/index.esm.js",
  "module": "lib/index.esm.js",
  "scripts": {
    "clean": "rm -rf ./lib",
    "lint": "eslint src",
    "build:self": "rollup -c config/rollup.config.js",
    "build:esm": "rollup -c config/rollup.config.esm.js",
    "build:umd": "rollup -c config/rollup.config.umd.js",
    "build": "npm run clean && npm run build:self && npm run build:esm &&  npm run build:umd",
    "test": "npm run lint && mocha -R spec --compilers js:babel-register",
    "release": "npm run test && git commit -am $npm_package_version && git tag $npm_package_version && git push origin master && git push --tags"
  },
  "author": "zcorky",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git://github.com/zcorky/movable.git"
  },
  "bugs": {
    "url": "https://github.com/zcorky/movable/issues"
  },
  "devDependencies": {
    "babel-core": "6.26.0",
    "babel-eslint": "^8.2.3",
    "babel-plugin-transform-class-properties": "^6.24.1",
    "babel-plugin-transform-runtime": "6.23.0",
    "babel-preset-env": "1.6.1",
    "chai": "^4.1.2",
    "es5-shim": "4.5.10",
    "eslint": "4.18.2",
    "expect.js": "0.3.1",
    "mocha": "3.5.3",
    "rollup": "0.57.1",
    "rollup-plugin-babel": "3.0.3",
    "rollup-plugin-commonjs": "8.3.0",
    "rollup-plugin-node-resolve": "3.0.3",
    "rollup-plugin-uglify": "^3.0.0"
  },
  "dependencies": {
    "babel-runtime": "6.26.0"
  },
  "files": [
    "lib"
  ]
}
